# dovecot pattenrs
DOVECOT_AUTH dovecot_login authenticator %{EXIM_REMOTE_HOST}: %{GREEDYDATA:exim_dovecot_info}
DOVECOT_DATE %{YEAR}-%{MONTHNUM}-%{MONTHDAY} %{TIME}

#### Dovecot standard presets
RIP_LIP rip=%{IP:rip}, lip=%{IP:lip}
DOVECOT_HEADER %{WORD:proto}-login: %{DATA:status_message}:
TWO_WORDS \w+\s\w+
LMTP lmtp

# Email
#EMAILADDRESSPART [a-zA-Z0-9_.+-=:]+
#EMAILADDRESS %{USERNAME:user}@%{HOSTNAME:domain}
USEROREMAIL %{USERNAME}(@%{HOSTNAME:domain})?

